<Window x:Class="HW12_net.ChooseUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW12_net"
        mc:Ignorable="d"
        Title="ChooseUser" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            Выберете пользователя:</TextBlock>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Button  Click="Consultant_Click" MinWidth="80" Margin="0,0,50,0">Консультант</Button>
            <Button  Click="Manager_Click" MinWidth="80">Менеджер</Button>

        </WrapPanel>

    </Grid>
</Window>
